@model IEnumerable<test13.Models.Admin>

@{
    ViewData["Title"] = "Admins";
}

<h2>Modifier la liste des admins</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prenom)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdresseMail)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MotDePasse)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prenom)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AdresseMail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MotDePasse)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.IdAdmin">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.IdAdmin">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.IdAdmin">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
